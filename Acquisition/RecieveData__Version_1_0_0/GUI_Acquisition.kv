<InfoWindow>:
    # Create names for each interactive object on InfoWindow
    name: "info"
    numberOfElectrodes: numberOfElectrodes
    numberOfEncoders: numberOfEncoders
    filename: filename

    FloatLayout:
        # Design of space to write desired numberOfElectrodes
        Label:
            text:"Number of electrodes : "
            font_size: 5*root.width / 200
            pos_hint: {"x":0.23, "top":0.925}
            size_hint: 0.35, 0.15

        TextInput:
            id: numberOfElectrodes
            text: '8'
            font_size: root.width**2 / 13**4
            multiline: False
            pos_hint: {"x": 0.55 , "top":0.9}
            size_hint: 0.4, 0.1

        # Design of space to write desired numberOfEncoders
        Label:
            text:"Number of encoders : "
            font_size: 5*root.width / 200
            pos_hint: {"x":0.19, "top":0.725}
            size_hint: 0.35, 0.15

        TextInput:
            id: numberOfEncoders
            text: '4'
            font_size: root.width**2 / 13**4
            multiline: False
            pos_hint: {"x": 0.55, "top":0.7}
            size_hint: 0.4, 0.1

        # Design of space to write the filename that will be produced by program
        Label:
            text:"Name of file to be created (.npy): "
            font_size: 5*root.width / 200
            pos_hint: {"x":0.13, "top":0.525}
            size_hint: 0.35, 0.15

        TextInput:
            id: filename
            text: 'Essai_Classification_1'
            font_size: root.width**2 / 13**4
            multiline: False
            pos_hint: {"x": 0.55, "y":0.4}
            size_hint: 0.4, 0.1

        # Design of the submission button
        Button:
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.2
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "Submit"
            on_release:
                root.manager.transition.direction = "up"
                root.submitBtn()


<AcquireWindow>:
    numberOfElectrodesInfo : numberOfElectrodesInfo
    numberOfEncodersInfo: numberOfEncodersInfo
    fileName : fileName
    changeInfo : changeInfo
    startAcquisition : startAcquisition
    plotNpzData : plotNpzData

    FloatLayout:
        Label:
            id: fileName
            pos_hint:{"x": 0.6, "top":0.25}
            size_hint:0.5, 0.2
            text: "File name: "

        Label:
            id: numberOfElectrodesInfo
            pos_hint:{"x": 0.6, "top":0.225}
            size_hint:0.5, 0.2
            text: "Tempo: "

        Label:
            id: numberOfEncodersInfo
            pos_hint:{"x": 0.6, "top":0.2}
            size_hint:0.5, 0.2
            text: "Tolerance : "

        Button:
            id: changeInfo
            pos_hint:{"x":0.1, "y": 0.2}
            size_hint:0.3,0.2
            text: 'Change Info'
            on_release:
                app.root.current = "info"
                root.manager.transition.direction = "down"

        Button:
            id: startAcquisition
            pos_hint:{"x":0.2, "y": 0.6}
            size_hint:0.6,0.2
            text: 'Start data acquisition'
            on_release:
                root.startAcquire()
        
        Button:
            id: plotNpzData
            pos_hint:{"x": 0.6, "y": 0.2}
            size_hint: 0.3,0.2
            text: 'Plot the acquired data'
            on_release:
                root.plotData()